<script type="text/javascript">

P.when('DynamicIframe').execute(function(DynamicIframe){
	var BookDescriptionIframe = null,
	    bookDescEncodedData = "%3Cp%3EFranz%20Kafka%2C%20frustrated%20with%20his%20living%20quarters%20and%20day%20job%2C%20wrote%20in%20a%20letter%20to%20Felice%20Bauer%20in%201912%2C%20%26ldquo%3Btime%20is%20short%2C%20my%20strength%20is%20limited%2C%20the%20office%20is%20a%20horror%2C%20the%20apartment%20is%20noisy%2C%20and%20if%20a%20pleasant%2C%20straightforward%20life%20is%20not%20possible%20then%20one%20must%20try%20to%20wriggle%20through%20by%20subtle%20maneuvers.%26rdquo%3B%3Cbr%3E%20%26%23160%3B%3Cbr%3E%20Kafka%20is%20one%20of%20161%20inspired%26mdash%3Band%20inspiring%26mdash%3Bminds%2C%20among%20them%2C%20novelists%2C%20poets%2C%20playwrights%2C%20painters%2C%20philosophers%2C%20scientists%2C%20and%20mathematicians%2C%20who%20describe%20how%20they%20subtly%20maneuver%20the%20many%20%28self-inflicted%29%20obstacles%20and%20%28self-imposed%29%20daily%20rituals%20to%20get%20done%20the%20work%20they%20love%20to%20do%2C%20whether%20by%20waking%20early%20or%20staying%20up%20late%3B%20whether%20by%20self-medicating%20with%20doughnuts%20or%20bathing%2C%20drinking%20vast%20quantities%20of%20coffee%2C%20or%20taking%20long%20daily%20walks.%20Thomas%20Wolfe%20wrote%20standing%20up%20in%20the%20kitchen%2C%20the%20top%20of%20the%20refrigerator%20as%20his%20desk%2C%20dreamily%20fondling%20his%20%26ldquo%3Bmale%20configurations%26rdquo%3B.%20.%20.%20Jean-Paul%20Sartre%20chewed%20on%20Corydrane%20tablets%20%28a%20mix%20of%20amphetamine%20and%20aspirin%29%2C%20ingesting%20ten%20times%20the%20recommended%20dose%20each%20day%20.%20.%20.%20Descartes%20liked%20to%20linger%20in%20bed%2C%20his%20mind%20wandering%20in%20sleep%20through%20woods%2C%20gardens%2C%20and%20enchanted%20palaces%20where%20he%20experienced%20%26ldquo%3Bevery%20pleasure%20imaginable.%26rdquo%3B%3Cbr%3E%3Cbr%3E%20Here%20are%3A%20Anthony%20Trollope%2C%20who%20demanded%20of%20himself%20that%20each%20morning%20he%20write%20three%20thousand%20words%20%28250%20words%20every%20fifteen%20minutes%20for%20three%20hours%29%20before%20going%20off%20to%20his%20job%20at%20the%20postal%20service%2C%20which%20he%20kept%20for%20thirty-three%20years%20during%20the%20writing%20of%20more%20than%20two%20dozen%20books%20.%20.%20.%20Karl%20Marx%20.%20.%20.%20Woody%20Allen%20.%20.%20.%20Agatha%20Christie%20.%20.%20.%20George%20Balanchine%2C%20who%20did%20most%20of%20his%20work%20while%20ironing%20.%20.%20.%20Leo%20Tolstoy%20.%20.%20.%20Charles%20Dickens%20.%20.%20.%20Pablo%20Picasso%20.%20.%20.%20George%20Gershwin%2C%20who%2C%20said%20his%20brother%20Ira%2C%20worked%20for%20twelve%20hours%20a%20day%20from%20late%20morning%20to%20midnight%2C%20composing%20at%20the%20piano%20in%20pajamas%2C%20bathrobe%2C%20and%20slippers%20.%20.%20.%3Cbr%3E%3Cbr%3E%20Here%20also%20are%20the%20daily%20rituals%20of%20Charles%20Darwin%2C%20Andy%20Warhol%2C%20John%20Updike%2C%20Twyla%20Tharp%2C%20Benjamin%20Franklin%2C%20William%20Faulkner%2C%20Jane%20Austen%2C%20Anne%20Rice%2C%20and%20Igor%20Stravinsky%20%28he%20was%20never%20able%20to%20compose%20unless%20he%20was%20sure%20no%20one%20could%20hear%20him%20and%2C%20when%20blocked%2C%20stood%20on%20his%20head%20to%20%26ldquo%3Bclear%20the%20brain%26rdquo%3B%29.%3Cbr%3E%3Cbr%3E%20Brilliantly%20compiled%20and%20edited%2C%20and%20filled%20with%20detail%20and%20anecdote%2C%20%3Ci%3EDaily%20Rituals%20%3C%2Fi%3Eis%20irresistible%2C%20addictive%2C%20magically%20inspiring.%3Cbr%3E%3C%2Fp%3E",
	    bookDescriptionAvailableHeight,
	    minBookDescriptionInitialHeight = 112,
	    options = {};
	    
    function resizeCallback() {
       	var bdOffsetTop = document.getElementById("bookDescription_feature_div").offsetTop;
   		var imageBlockOffsetTop = document.getElementById("booksImageBlock_feature_div").offsetTop;
   		var imageBlockHeight = document.getElementById("booksImageBlock_feature_div").offsetHeight;
   		bookDescriptionAvailableHeight = imageBlockOffsetTop + imageBlockHeight -bdOffsetTop - 30;
   		if(bookDescriptionAvailableHeight < minBookDescriptionInitialHeight) {
   	        bookDescriptionAvailableHeight = minBookDescriptionInitialHeight;
   		}
    		
    	var psTotalHeight = document.getElementById("postBodyPS").offsetHeight;

    	if(psTotalHeight > bookDescriptionAvailableHeight + 30){
    		if(document.getElementById("bdSeeLessPrompt").style.display == "none"){
    	    	document.getElementById("outer_postBodyPS").style.height = bookDescriptionAvailableHeight + 'px';
    	    	document.getElementById("psPlaceHolder").style.display ="block";
    	    	document.getElementById("bdSeeAllPrompt").style.display ="block";
    		}
    		else{
    			document.getElementById("outer_postBodyPS").style.height = psTotalHeight + 'px';
    		}
        }
        else{
        	document.getElementById("outer_postBodyPS").style.height = psTotalHeight + 'px';
        	document.getElementById("psPlaceHolder").style.display ="none";
        	document.getElementById("bdSeeAllPrompt").style.display ="block";
	    	document.getElementById("bdSeeLessPrompt").style.display ="none";
	    	document.getElementById("bdExpanderIcon").className = document.getElementById("bdExpanderIcon").className.replace("rotate","");
        }
    }
	    
	options.iframeId = "bookDesc_iframe";
	options.iframeWrapperId = "bookDesc_iframe_wrapper";
	options.overriddenCSSId = "bookDesc_override_CSS";
	options.encodedIframeContent = bookDescEncodedData;
	options.initialResizeCallback = resizeCallback;
	
	BookDescriptionIframe = new DynamicIframe(options);
	BookDescriptionIframe.createIframe();
	    
	if ((typeof BookDescriptionIframe != 'undefined') && (BookDescriptionIframe instanceof DynamicIframe)) {
	  P.when('jQuery').execute(function($) {
	    $(window).resize(function() {
	        BookDescriptionIframe.resizeIframe(resizeCallback);
	    });
	    $(window).bind('imageResize', function() {
	    	BookDescriptionIframe.resizeIframe(resizeCallback);
	    });
	  });
	}
});
</script>

        
        
        
        
        
        
    
    






